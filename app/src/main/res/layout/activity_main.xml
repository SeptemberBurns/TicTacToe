<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.october.ticatactoe.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277">

        <Button
            android:id="@+id/pos0_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="0"
            android:onClick="Pressed" />

        <Button
            android:id="@+id/pos0_1"
            android:tag="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Pressed" />

        <Button
            android:id="@+id/pos0_2"
            android:tag="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Pressed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/pos1_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="3"
            android:onClick="Pressed" />

        <Button
            android:id="@+id/pos1_1"
            android:layout_width="wrap_content"
            android:tag="4"
            android:layout_height="wrap_content"
            android:onClick="Pressed" />

        <Button
            android:id="@+id/pos1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="5"
            android:onClick="Pressed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.706">

        <Button
            android:id="@+id/pos2_0"
            android:tag="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Pressed" />

        <Button
            android:id="@+id/pos2_1"
            android:tag="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Pressed" />

        <Button
            android:id="@+id/pos2_2"
            android:tag="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Pressed" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
